{
  "name": "squash-bot",
  "version": "1.0.0",
  "description": "Telegram bot for managing squash court payments",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "ENVIRONMENT=production node dist/index.js",
    "start:test": "ENVIRONMENT=test node dist/index.js",
    "dev": "ENVIRONMENT=test tsx watch src/index.ts",
    "dev:prod": "ENVIRONMENT=production tsx watch src/index.ts",
    "debug:message": "tsx debug-send-message.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "ENVIRONMENT=test playwright test tests/e2e --config=playwright.mjs",
    "test:e2e:ui": "ENVIRONMENT=test E2E_HEADED=true  playwright test tests/e2e --config=playwright.mjs",
    "test:auth": "tsx scripts/create-telegram-auth.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "squash",
    "notion"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "fastify": "^4.26.0",
    "grammy": "^1.24.0",
    "nanoid": "^5.0.4",
    "postgres": "^3.4.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@grammyjs/types": "^3.22.2",
    "@playwright/test": "1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^4.0.16",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.4.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "4.21.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.16"
  }
}
