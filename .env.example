# Telegram Bot Configuration
# Use different tokens for production and test environments
TELEGRAM_BOT_TOKEN=
TELEGRAM_MAIN_CHAT_ID=
TELEGRAM_LOG_CHAT_ID=
ADMIN_TELEGRAM_ID=

# Notion API Configuration
NOTION_API_KEY=

# Notion Database IDs
# For production: use production database IDs
# For test: use test database IDs (same variable names, different values)
NOTION_DATABASE_SCAFFOLDS=
NOTION_DATABASE_EVENTS=
NOTION_DATABASE_PARTICIPANTS=
NOTION_DATABASE_EVENT_PARTICIPANTS=
NOTION_DATABASE_PAYMENTS=
NOTION_DATABASE_SETTINGS=

# Server Configuration
PORT=3010
API_KEY=your-api-key-here

# Timezone
TIMEZONE=Europe/Belgrade

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/squash_bot

# Note: For E2E tests, the test chat ID is read from TELEGRAM_MAIN_CHAT_ID in .env.test
